{% extends "base.html.twig" %}

{% block content%}
    <div class="users">
    {% for id,element in users %}
        <a href="{{ path('profile_page', {'id': id }) }}">
            <div class="userCard">
                <div class="cardImage">
                    {# voir pour le lien avec l image ne marche pas #}
                    <img src="{{ asset('assets/images/element.getImage()') }}" alt="" class="resp userCardImage">
                </div>
                <div class="userCardName">
                    <h2>{{ element.getName()}}</h2>
                    <h4>({{  element.getShortname() }})</h4>
                </div>
                <div class="userCardReknown">
                    <h5>{{ element.getReknown() }}</h5>
                </div>
                <div class="userCardBio">
                    <h6>{{ element.getBio() }}</h6>
                </div>
            </div>
        </a>
    {% endfor %}
    </div>
{% endblock %}

